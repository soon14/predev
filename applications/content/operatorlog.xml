        <template>批量删除 文章栏目 %s</template>
    </register>

    <register module="site" ctl="admin_node" act="update" param="ordernum">
        <operate_type>批量排序 文章栏目</operate_type>
        <template>批量排序文章栏目 %s</template>
    </register>
